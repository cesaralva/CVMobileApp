<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BackgroundActivity">



    <LinearLayout

        android:id="@+id/Background"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:orientation="horizontal"
        android:background="@color/cyan_700"
        android:elevation="8dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="94dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:src="?attr/actionModeCloseDrawable" />

        <TextView
            android:id="@+id/back_return"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="-50dp"
            android:layout_marginTop="0dp"

            android:layout_weight="1"
            android:gravity="center|center_horizontal"

            android:text="Background"
            android:textColor="@color/white"
            android:textSize="27sp"
            android:textStyle="bold" />

    </LinearLayout>


    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="42dp"
            android:padding="0dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="4dp">

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"/>

                <de.hdodenhof.circleimageview.CircleImageView

                    android:id="@+id/Purwa"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/senati" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="65dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Instituto Superior Senati"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginTop="3dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cei"
                        android:textColor="@color/grey_900"
                        android:textSize="13dp"
                        android:layout_marginRight="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2018-2022"
                        android:textSize="13dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="30dp">

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imagenInsitut"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/logo_idat" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="65dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Insituto tecnologico Idat"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginTop="3dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Computacion y Informatica"
                        android:textColor="@color/grey_900"
                        android:textSize="13dp"
                        android:layout_marginRight="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2007-2010"
                        android:textSize="13dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <ScrollView
        android:id="@+id/espacio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="52dp"
            android:padding="0dp">

        </LinearLayout>

    </ScrollView>

    <ScrollView
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="0dp"
            android:padding="0dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardFigma"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="4dp">

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">

                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imagenFigma"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/javascript" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="65dp">

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:layout_alignBaseline="@+id/textJavascript"
                        android:layout_marginTop="-20dp"
                        android:angle="-90"
                        android:progress="60"
                        android:progressTint="@color/yellow"
                        android:scaleY="2" />

                    <TextView
                        android:id="@+id/textJavascript"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Javascript"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginTop="3dp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardFacil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="4dp">

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imagenUniversity"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/typescript" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="65dp">


                    <ProgressBar
                        android:id="@+id/progressBar1"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:layout_alignBaseline="@+id/textTypescript"
                        android:layout_marginTop="-20dp"
                        android:angle="-90"
                        android:progress="60"
                        android:progressTint="@color/typescript"
                        android:scaleY="2">

                    </ProgressBar>

                    <TextView
                        android:id="@+id/textTypescript"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="TypeScript"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:id="@+id/cardCorel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="4dp">

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imagenCorel"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/github" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="65dp">

                    <ProgressBar
                        android:id="@+id/progressBar2"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:layout_alignBaseline="@+id/textGithub"
                        android:layout_marginTop="-20dp"
                        android:angle="-90"
                        android:progress="60"
                        android:progressTint="@color/mysql"
                        android:scaleY="2">

                    </ProgressBar>


                    <TextView
                        android:id="@+id/textGithub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="Git/Github"


                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardIndesing"
                android:layout_width="351dp"
                android:layout_height="66dp"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="0dp"
                    android:orientation="vertical"
                    android:padding="0dp">

                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imagenIndesing"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/mongodb" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="65dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ProgressBar
                        android:id="@+id/progresbar3"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:layout_alignBaseline="@+id/textMongoDb"
                        android:layout_marginTop="-20dp"
                        android:angle="-90"
                        android:progress="60"

                        android:progressTint="@color/mongodb"
                        android:scaleY="2">

                    </ProgressBar>

                    <TextView
                        android:id="@+id/textMongoDb"
                        android:layout_width="286dp"
                        android:layout_height="52dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginBottom="20dp"
                        android:text="MongoDB"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:id="@+id/cardSketchUp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">

                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imagenInsitute"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/react1" />

                <LinearLayout
                    android:layout_width="286dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="65dp"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/Progresbar3"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="250dp"
                            android:layout_height="30dp"
                            android:layout_alignBaseline="@+id/textReact"
                            android:layout_marginTop="-20dp"
                            android:angle="-90"
                            android:progress="69"
                            android:progressTint="@color/react"
                            android:scaleY="2">

                        </ProgressBar>


                        <TextView
                            android:id="@+id/textReact"
                            android:layout_width="286dp"
                            android:layout_height="52dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="25dp"
                            android:layout_marginBottom="-20dp"
                            android:text="React"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>